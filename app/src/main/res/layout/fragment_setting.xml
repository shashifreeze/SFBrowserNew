<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorWhite"
    android:layout_height="match_parent"
    tools:context="in.blogspot.programmingdesire.sfbrowsernew.SettingFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
   <LinearLayout
       android:layout_width="match_parent"
       android:orientation="vertical"
       android:layout_margin="5dp"
       android:background="@drawable/style_one"
       android:layout_height="wrap_content">
      <TextView
          android:layout_width="match_parent"
          android:text="Text Size"
          android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
          android:textColor="@color/colorBlack"
          android:textStyle="italic"
          android:layout_margin="5dp"
          android:layout_height="wrap_content" />
           <RadioGroup
               android:layout_width="match_parent"
               android:orientation="horizontal"
               android:id="@+id/rg"
               android:layout_height="wrap_content">
               <RadioButton
                   android:layout_width="wrap_content"
                   android:text="small"
                   android:textStyle="italic"
                   android:id="@+id/smallText"
                   android:textColor="@color/colorBlack"                   android:layout_weight="1"
                   android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                   android:layout_height="wrap_content" />
               <RadioButton
                   android:layout_width="wrap_content"
                   android:text="Medium"
                   android:id="@+id/mediumText"
                   android:layout_weight="1"
                   android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                   android:textStyle="italic"
                   android:textColor="@color/colorBlack"                   android:layout_height="wrap_content" />
               <RadioButton
                   android:layout_width="wrap_content"
                   android:text="Large"
                   android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                   android:id="@+id/largeText"
                   android:textStyle="italic"
                   android:textColor="@color/colorBlack"                   android:layout_weight="1"
                   android:layout_height="wrap_content" />
           </RadioGroup>

   </LinearLayout>
        <CheckBox
            android:layout_width="match_parent"
            android:text="Allow Cookies"
            android:textColor="@color/colorBlack"
            android:layout_margin="3dp"
            android:id="@+id/alloCookiesID"
            android:background="@drawable/style_one"
            android:layout_height="wrap_content" />

            <Button
                android:layout_width="match_parent"
                android:text="Select WebPage Text Color"
                android:layout_margin="3dp"
                android:id="@+id/selectTextColor"
                android:background="@drawable/style_one"
                android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_margin="5dp"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="match_parent"
            android:text="Clear Search Bar History"
            android:id="@+id/clearSearchBarHis"
            android:layout_marginBottom="8dp"
            android:textStyle="italic"
            style="@android:style/Widget.DeviceDefault.Button.Borderless.Small"
            android:background="@drawable/style_one"
            android:textColor="@color/colorBlack"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:layout_height="wrap_content" />

        <Button
            android:layout_width="match_parent"
            android:text="Clear cache"
            android:id="@+id/clearCacheBtn"
            android:layout_marginBottom="8dp"
            android:textStyle="italic"
            style="@android:style/Widget.DeviceDefault.Button.Borderless.Small"
            android:background="@drawable/style_one"
            android:textColor="@color/colorBlack"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:layout_height="wrap_content" />
        <Button
            android:layout_width="match_parent"
            android:text="Clear History"
            android:textStyle="italic"
            android:id="@+id/clearHisBtnInSetting"
            style="@android:style/Widget.DeviceDefault.Button.Borderless.Small"
            android:background="@drawable/style_one"
            android:textColor="@color/colorBlack"
            android:layout_marginBottom="8dp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:layout_height="wrap_content" />
        <Button
            android:layout_width="match_parent"
            android:text="Clear Cookies"
            android:textStyle="italic"
            android:layout_marginBottom="8dp"
            android:textColor="@color/colorBlack"
            android:id="@+id/clearCookiesBtn"
            style="@android:style/Widget.DeviceDefault.Button.Borderless.Small"
            android:background="@drawable/style_one"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:layout_height="wrap_content" />
    </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/exitSettingsBtn"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_margin="3dp"
        style="@android:style/Widget.DeviceDefault.Button.Borderless.Small"
        android:text="Back"
        android:textColor="@color/colorWhite"
        android:background="@color/colorTomato"
        />
</FrameLayout>
