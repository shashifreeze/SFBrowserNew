<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="in.blogspot.programmingdesire.sfbrowsernew.MainActivity">
    <FrameLayout
        android:layout_width="match_parent"
        android:id="@+id/frm"
        android:layout_gravity="center"
        android:layout_height="match_parent"
        >
    </FrameLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="bottom|right"
        android:id="@+id/down"
        android:layout_height="45dp">
        <FrameLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:layout_height="42dp">
            <ImageButton
                android:id="@+id/tabBtnId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="10pt"
                android:src="@drawable/ic_crop_square_black_24dp"
                android:textColor="@color/colorBlack"
                android:textStyle="bold"
                android:textAlignment="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:text="1"
                android:id="@+id/tabTextId"
                android:textColor="@color/colorLightBlack"
                android:layout_gravity="center"
                android:layout_height="wrap_content" />

        </FrameLayout>
        <ImageButton
            android:id="@+id/opt_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:padding="10pt"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:contentDescription="menu Button"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_menu_black_24dp" />

        <ImageView
            android:layout_width="30dp"
            android:src="@drawable/ic_fullscreen_exit_black_24dp"
            android:layout_gravity="center_vertical"
            android:id="@+id/fullScreenIV"
            android:layout_margin="8dp"
            android:visibility="gone"
            android:layout_height="30dp" />


    </LinearLayout>
</FrameLayout>
